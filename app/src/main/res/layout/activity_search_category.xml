<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchCategory">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Min HP"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/steel" />

    <TextView
            android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Min Defense"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/steel" />

    <EditText
        android:id="@+id/hpField"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:hint="e.g. 50"
        android:text="0"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/defenseField"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/defenseField"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:hint="e.g. 50"
        android:text="0"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toStartOf="@+id/hpField"
        app:layout_constraintStart_toEndOf="@+id/attackField"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.95" />


    <CheckBox
        android:id="@+id/dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:text="Dark"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/ghost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bug" />

    <CheckBox
        android:id="@+id/steel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ghost"
        app:layout_constraintTop_toBottomOf="@+id/ice" />

    <CheckBox
        android:id="@+id/ghost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:text="Ghost"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/steel"
        app:layout_constraintStart_toEndOf="@+id/dark"
        app:layout_constraintTop_toBottomOf="@+id/flying" />

    <CheckBox
        android:id="@+id/bug"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:text="Bug"
        app:layout_constraintBottom_toTopOf="@+id/dark"
        app:layout_constraintEnd_toStartOf="@+id/flying"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poison" />

    <CheckBox
        android:id="@+id/ice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Ice"
        app:layout_constraintBottom_toTopOf="@+id/steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flying"
        app:layout_constraintTop_toBottomOf="@+id/grass" />

    <CheckBox
        android:id="@+id/flying"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Flying"
        app:layout_constraintBottom_toTopOf="@+id/ghost"
        app:layout_constraintEnd_toStartOf="@+id/ice"
        app:layout_constraintStart_toEndOf="@+id/bug"
        app:layout_constraintTop_toBottomOf="@+id/electric" />

    <CheckBox
        android:id="@+id/poison"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:text="Poison"
        app:layout_constraintBottom_toTopOf="@+id/bug"
        app:layout_constraintEnd_toStartOf="@+id/electric"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rock" />

    <CheckBox
        android:id="@+id/grass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Grass"
        app:layout_constraintBottom_toTopOf="@+id/ice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/electric"
        app:layout_constraintTop_toBottomOf="@+id/dragon" />

    <CheckBox
        android:id="@+id/electric"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Electric"
        app:layout_constraintBottom_toTopOf="@+id/flying"
        app:layout_constraintEnd_toStartOf="@+id/grass"
        app:layout_constraintStart_toEndOf="@+id/poison"
        app:layout_constraintTop_toBottomOf="@+id/fairy" />

    <CheckBox
        android:id="@+id/rock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:text="Rock"
        app:layout_constraintBottom_toTopOf="@+id/poison"
        app:layout_constraintEnd_toStartOf="@+id/fairy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water" />

    <CheckBox
        android:id="@+id/dragon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Dragon"
        app:layout_constraintBottom_toTopOf="@+id/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fairy"
        app:layout_constraintTop_toBottomOf="@+id/ground" />

    <CheckBox
        android:id="@+id/fairy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Fairy"
        app:layout_constraintBottom_toTopOf="@+id/electric"
        app:layout_constraintEnd_toStartOf="@+id/dragon"
        app:layout_constraintStart_toEndOf="@+id/rock"
        app:layout_constraintTop_toBottomOf="@+id/psychic" />

    <CheckBox
        android:id="@+id/water"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:text="Water"
        app:layout_constraintBottom_toTopOf="@+id/rock"
        app:layout_constraintEnd_toStartOf="@+id/psychic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normal" />

    <CheckBox
        android:id="@+id/ground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Ground"
        app:layout_constraintBottom_toTopOf="@+id/dragon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/psychic"
        app:layout_constraintTop_toBottomOf="@+id/fighting" />

    <CheckBox
        android:id="@+id/psychic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Psychic"
        app:layout_constraintBottom_toTopOf="@+id/fairy"
        app:layout_constraintEnd_toStartOf="@+id/ground"
        app:layout_constraintStart_toEndOf="@+id/water"
        app:layout_constraintTop_toBottomOf="@+id/fire" />

    <TextView
        android:id="@+id/number"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="32dp"
        android:text="Select Your Filters!"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/normal"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:text="Normal"
        app:layout_constraintEnd_toStartOf="@+id/fire"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <CheckBox
        android:id="@+id/fire"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Fire"
        app:layout_constraintBottom_toTopOf="@+id/psychic"
        app:layout_constraintEnd_toStartOf="@+id/fighting"
        app:layout_constraintStart_toEndOf="@+id/normal"
        app:layout_constraintTop_toBottomOf="@+id/number"
        android:clickable="true" />

    <CheckBox
        android:id="@+id/fighting"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:text="Fighting"
        app:layout_constraintBottom_toTopOf="@+id/ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fire"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <EditText
        android:id="@+id/attackField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:editable="true"
        android:hint="e.g. 50"
        android:text="0"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toStartOf="@+id/defenseField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Min Attack"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dark" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:text="Cancel"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defenseField" />

    <Button
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/defenseField" />






</android.support.constraint.ConstraintLayout>